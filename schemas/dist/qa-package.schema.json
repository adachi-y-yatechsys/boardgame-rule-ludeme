{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ludeme QA package",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "generatedAt",
    "modelCount",
    "models"
  ],
  "properties": {
    "generatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "modelCount": {
      "type": "integer",
      "minimum": 0
    },
    "checksum": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "models": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/modelEntry"
      }
    }
  },
  "$defs": {
    "modelEntry": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "ludeme",
        "phase",
        "status",
        "summary",
        "evidence",
        "links",
        "source"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9_.-]+$"
        },
        "title": {
          "type": "string",
          "minLength": 5
        },
        "ludeme": {
          "type": "string",
          "minLength": 1
        },
        "phase": {
          "type": "string",
          "enum": [
            "setup",
            "turn",
            "endgame",
            "auxiliary"
          ]
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "review",
            "approved"
          ]
        },
        "summary": {
          "type": "string",
          "minLength": 10
        },
        "evidence": {
          "type": "object",
          "required": [
            "sourceId",
            "page"
          ],
          "additionalProperties": false,
          "properties": {
            "sourceId": {
              "type": "string",
              "minLength": 3
            },
            "page": {
              "type": "string",
              "minLength": 1
            },
            "note": {
              "type": "string"
            }
          }
        },
        "links": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "type",
              "ref"
            ],
            "additionalProperties": false,
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "glossary",
                  "mapping",
                  "evidence"
                ]
              },
              "ref": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "source": {
          "type": "string"
        }
      }
    }
  }
}
